---
import data from "@/data.json";

const avg = Math.round(data.map((item) => item.score).reduce((acc, v) => acc + v) / 4);
---

<div class="gradient flex flex-col items-center gap-6 rounded-b-[2rem] px-6 pb-10 pt-6 md:gap-8 md:rounded-[2rem] md:pb-14 md:pt-9">
  <h1 class="text-lg font-bold text-n-light-lavender md:text-2xl">Your Results</h1>

  <div class="score-gradient flex size-[8.75rem] flex-col items-center justify-center rounded-full md:size-[12.5rem]">
    <span class="text-[3.5rem] font-extrabold leading-[4.5rem] text-white md:text-[4.5rem]">{avg}</span>
    <span class="font-bold text-n-light-lavender opacity-50 md:text-lg">of 100</span>
  </div>

  <div class="flex flex-col items-center gap-2 text-center md:gap-3">
    <h2 class="text-2xl font-bold text-white md:text-[2rem]">Great</h2>
    <p class="text-balance font-medium leading-tight text-n-light-lavender md:text-lg md:leading-snug">
      Your performance exceed 65% of the people conducting the test here!
    </p>
  </div>
</div>

<style scoped>
  .gradient {
    background: var(--Gradient-1, linear-gradient(180deg, #75f 0%, #6943ff 0.01%, #2f2ce9 100%));
    box-shadow: 0px 30px 60px 0px rgba(61, 108, 236, 0.15);
  }

  .score-gradient {
    background: var(--Gradient-2, linear-gradient(180deg, #4d21c9 0%, rgba(37, 33, 201, 0) 100%));
  }
</style>
